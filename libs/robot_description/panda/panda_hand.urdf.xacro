<?xml version="1.0" encoding="utf-8"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:macro name="panda_hand" params="file_prefix:='package://robot_description/panda' name_prefix:=''">


    <link name="${name_prefix}panda_hand">
      <visual>
        <geometry>
          <mesh filename="${file_prefix}/meshes/visual/hand.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="${file_prefix}/meshes/collision/hand.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${name_prefix}panda_leftfinger">
      <visual>
        <geometry>
          <mesh filename="${file_prefix}/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="${file_prefix}/meshes/collision/finger.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${name_prefix}panda_rightfinger">
      <visual>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
        <geometry>
          <mesh filename="${file_prefix}/meshes/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 3.14159265359" xyz="0 0 0"/>
        <geometry>
          <mesh filename="${file_prefix}/meshes/collision/finger.stl"/>
        </geometry>
      </collision>
    </link>
    <joint name="${name_prefix}panda_finger_joint1" type="prismatic">
      <parent link="${name_prefix}panda_hand"/>
      <child link="${name_prefix}panda_leftfinger"/>
      <origin rpy="0 0 0" xyz="0 0 0.0584"/>
      <axis xyz="0 1 0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
    </joint>
    <joint name="${name_prefix}panda_finger_joint2" type="prismatic">
      <parent link="${name_prefix}panda_hand"/>
      <child link="${name_prefix}panda_rightfinger"/>
      <origin rpy="0 0 0" xyz="0 0 0.0584"/>
      <axis xyz="0 -1 0"/>
      <limit effort="20" lower="0.0" upper="0.04" velocity="0.2"/>
      <mimic joint="${name_prefix}panda_finger_joint1"/>
    </joint>
    </xacro:macro>
</robot>

